<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_fb_background"
    tools:context=".relativelayouts.IgRelativeLayoutActivity">

    <ImageView
        android:id="@+id/facebook_logo_iv"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_facebook_logo_wine" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_textfield"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/facebook_logo_iv"
        android:layout_alignStart="@id/facebook_logo_iv"
        android:layout_alignEnd="@id/facebook_logo_iv"
        android:layout_marginTop="100dp"
        android:textColorHint="@color/dark_gray">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Email or Phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_textfield"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/username_textfield"
        android:layout_alignStart="@id/username_textfield"
        android:layout_alignEnd="@id/username_textfield"
        android:layout_marginTop="14dp"
        android:textColorHint="@color/dark_gray">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   Password" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/dark_blue"
        android:text="LOG IN"
        android:layout_below="@id/password_textfield"
        android:layout_alignStart="@id/password_textfield"
        android:layout_alignEnd="@id/password_textfield"/>

    <TextView
        android:id="@+id/forgot_password_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_alignEnd="@id/login_btn"
        android:layout_alignStart="@id/login_btn"
        android:layout_below="@id/login_btn"/>

</RelativeLayout>
